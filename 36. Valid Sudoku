/******************************
1.check row=>col=>3x3
******************************/

bool isValidSudoku(char** board, int boardSize, int* boardColSize){
    //Start to check by row.
    for (int i=0 ; i<9 ; i++)
    {
        for (int j=0 ; j<9 ; j++)
        {
            if (board[i][j] != '.') // If it's '.'==>Skip
            {
                for (int k=j+1 ; k<9 ; k++)
                {
                    if (board[i][j] == board[i][k])
                    {
                        return false;
                    }
                }
            }
        }
    }
    
    //Start to check by column.
    for (int i=0 ; i<9 ; i++)
    {
        for (int j=0 ; j<9 ; j++)
        {
            if (board[j][i] != '.') // If it's '.'==>Skip
            {
                for (int k=j+1 ; k<9 ; k++)
                {
                    if (board[j][i] == board[k][i])
                    {
                        return false;
                    }
                }
            }
        }
    }
    
    
    //Start to check by 3x3 square.
    int row=0;
    int col=0;
    int row2=0;
    int col2=0;
    
    for (int i=0 ; i<9 ; i+=3)
    {
        for (int j=0 ; j<9 ; j+=3)
        {
            for (int k=0 ; k<9 ; k++)
            {
                row = k/3;
                col = k%3;
                if (board[i+row][j+col]!='.') // If it's '.'==>Skip
                {
                    for (int p=k+1 ; p<9 ; p++)
                    {
                        row2 = p/3;
                        col2 = p%3;
                        if (board[i+row][j+col] == board[i+row2][j+col2])
                        {
                            return false;
                        }
                    }
                }
            }
        }
    }
    //printf("3x3 finish\n");
    return true;
}


/******************************
2.check row=>col=>3x3 in same loop.
******************************/
bool isValidSudoku(char** board, int boardSize, int* boardColSize){
    //variable that for 3x3 sub-boxes
    int row=0;
    int col=0;
    int row2=0;
    int col2=0;
    
    for (int i=0 ; i<9 ; i++)
    {
        for (int j=0 ; j<9 ; j++)
        {
            //printf("board[%d][%d]=%c\n",i,j,board[i][j]);
            if (board[i][j] != '.') // If it's '.'==>Skip
            {
                //checking by row
                for (int k=j+1 ; k<9 ; k++)
                {
                    if (board[i][j] == board[i][k])
                    {
                        return false;
                    }
                }
                //checking by column
                for (int k=i+1 ; k<9 ; k++)
                {
                    if (board[i][j] == board[k][j])
                    {
                        return false;
                    }
                }
            }
            //checking by 3x3 sub-boxes
            if ( i%3==0 && j%3==0)
            {
                for (int k=0 ; k<9 ; k++)
                {
                    row = k/3;
                    col = k%3;
                    if (board[i+row][j+col]!='.') // If it's '.'==>Skip
                    {
                        for (int p=k+1 ; p<9 ; p++)
                        {
                            row2 = p/3;
                            col2 = p%3;
                            if (board[i+row][j+col] == board[i+row2][j+col2])
                            {
                                return false;
                            }
                        }
                    }
                }
            }
        }
    }
    return true;
}

/***********************
3.Use three array to set index of whether the number is appeared before in row/col/box. 
  Use this function for next question.
***********************/
bool isValidSudoku(char** board, int boardSize, int* boardColSize){
    int (*row)[9] = (int(*)[9])malloc(9*9*sizeof(int));
    int (*col)[9] = (int(*)[9])malloc(9*9*sizeof(int));
    int (*box)[9] = (int(*)[9])malloc(9*9*sizeof(int));
    //Initialize all element to 0
    for (int i=0; i<81 ;i++)
    {
        row[i/9][i%9]=0;
        col[i/9][i%9]=0;
        box[i/9][i%9]=0;
    }
    //Is this sudoku valid ?
    bool valid=1;
    
    int boxIndex=0;
    int num=0;
    for(int i = 0 ; i < 9; i++)
    {
        if (! valid)
            break;
        for(int j = 0; j < 9; j++)
        {
            if(board[i][j] == '.')
                continue;
            
            //'1'~'9' corresponding to 0 ~ 8
            num = board[i][j] - '1';
            //boxIndex = (row/3)*3 + col/3;
            //0 <= boxIndex <= 8
            boxIndex = (i/3)*3 + j/3;
            
            //If current num appears in corresponding index of row/col/box. ==> inValid.
            if(row[i][num]|col[j][num]|box[boxIndex][num])
            {
                valid=false;
                break;
            }
            //If the num isn't repeated. ==> set corresponding index to 1.
            row[i][num] = col[j][num] = box[boxIndex][num] = 1;
        }
    }
    
	free(row);
    free(col);
    free(box);
    if(valid)
        return true;
    else
        return false;
}
