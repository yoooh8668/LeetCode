 /*****************************
 Failed to compare double variable.
 *****************************/
 
 
 //compares if the float f1 is equal with f2 and returns 1 if true and 0 if false
 bool compare_float(double f1, float f2)
 {
    double precision = 0.00001;
    if (((f1 - precision) < f2) && 
        ((f1 + precision) > f2))
        return true;
    else
        return false;
 }

double myPow(double x, int n){
    double result=1.0;
    double onePos=1.0;
    double oneNeg=-1.0;
    
    printf("x=%e\n",x);
    int negative=0;
    if (n<0)
    {
        n=abs(n);
        negative=1;
    }
    else if(n==0)
        return 1.0;
    
    if (compare_float(x,onePos))
    {
        printf("x=1");
        return 1.0;
    }
    else if (compare_float(x,oneNeg))
    {
        if (n/2==1)
            return -1.0;
        else
            return 1.0;
    }
        
    while (n>0)
    {
        //printf("n=%d\n",n);
        result*=x;
        //printf("result=%lf\n",result);
        n--;
    }
    
    if(negative)
        result = 1/result;
    
    return result;
}
