

int trap(int* height, int heightSize){
    if (heightSize<=1)
        return 0;
    int result=0;
    int resultTemp=0;
    
    //set start and end
    int start=0;
    while (start<heightSize && height[start]==0)
        start++;
    int end=start+1;
    
    //front search
    while (end!=heightSize)
    {
        if (height[end]>=height[start])
        {
            resultTemp=((end-start-1)*height[start]);
            for (int i=start+1 ; i<end ; i++)
            {
                resultTemp-=height[i];
            }
            //printf("resultTemp=%d, start=%d, end=%d\n",resultTemp,start,end);
            result+=resultTemp;
            start=end;
            end=start+1;
        }
        else
            end++;
    }
    
    //back search
    end = heightSize-1;
    while (end>=0 && height[end]==0)
        end--;
    int next=end-1;
    while (next>=start)
    {
        if (height[next]>=height[end])
        {
            resultTemp=((end-next-1)*height[end]);
            for (int i=next+1 ; i<end ; i++)
            {
                resultTemp-=height[i];
            }
            //printf("resultTemp=%d, next=%d, end=%d\n",resultTemp,next,end);
            result+=resultTemp;
            end=next;
            next=end-1;
        }
        else
            next--;
    }
    
    return result;
}
