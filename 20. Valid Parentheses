

bool isValid(char * s){
    int sLen = strlen(s);
    //odd sLen always false
    if (sLen %2 == 1)
        return false;
    
    int count =sLen;
    for (int i=0 ; i<=sLen-2 ;i++)
    {
        if (s[i])                   //s[i] != NULL
        {
            for (int j=i+1 ; j<=sLen-1 ;)
            {
                if( !s[j] )         //s[j] == NULL
                    j++;
                else if (  (s[i]=='(' && s[j]==')') || (s[i]=='{' && s[j]=='}') || (s[i]=='[' && s[j]==']') )
                {
                    s[i] =0;
                    s[j] =0;
                    i=-1;
                    count-=2;
                    if (count == 0)
                        return true;
                    break;
                }
                else
                    break;
            }
        }
        else 
            i++;
    }
    return false;
}
