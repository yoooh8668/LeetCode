

void setZeroes(int** matrix, int matrixSize, int* matrixColSize){
    //whether this row/col has 0?
    bool row[matrixSize];
    bool col[matrixColSize[0]];
    
    for (int i=0 ; i<matrixSize ; i++)
        row[i]=0;
    for (int j=0 ; j<matrixColSize[0] ; j++)
        col[j]=0;
    
    
    for (int i=0 ; i<matrixSize ; i++)
    {
        for (int j=0 ; j<matrixColSize[0] ; j++)
        {
            if (matrix[i][j]==0)
            {
                row[i]=1;
                col[j]=1;
            }
        }
    }
    //if this row/col has 0, set to 0.
    for (int i=0 ; i<matrixSize ; i++)
    {
        for (int j=0 ; j<matrixColSize[0] ; j++)
        {
            if (row[i] || col[j])
            {
                matrix[i][j]=0;
            }
        }
    }
}
