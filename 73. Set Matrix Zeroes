

void setZeroes(int** matrix, int matrixSize, int* matrixColSize){
    //whether this col has 0?
    int col[matrixColSize[0]];
    int rowFlag=0;
    for (int i=0 ; i<matrixSize ; i++)
    {
        for (int j=0 ; j<matrixColSize[0] ; j++)
        {
            if (matrix[i][j]==0)
            {
                rowFlag=1;
                col[j]=1;
            }
        }
        //whether this row has 0?
        if (rowFlag==1)
        {
            for (int j=0 ; j<matrixColSize[0] ; j++)
                matrix[i][j]=0;
            rowFlag=0;
        }
    }
    //if this col has 0, set to 0.
    for (int j=0 ; j<matrixColSize[0] ; j++)
    {
        if (col[j]==1)
        {
            for (int i=0 ; i<matrixSize ; i++)
                matrix[i][j]=0;
        }
    }
}
